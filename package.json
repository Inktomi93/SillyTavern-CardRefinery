{
    "name": "sillytavern-cardrefinery",
    "type": "module",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "webpack --mode development --watch",
        "build": "webpack --mode production",
        "clean": "rm -rf dist",
        "rebuild": "npm run clean && npm run build",
        "typecheck": "tsc --noEmit --project tsconfig.json",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "lint:css": "stylelint \"src/styles/**/*.css\"",
        "lint:css:fix": "stylelint \"src/styles/**/*.css\" --fix",
        "format": "prettier . --write",
        "format:check": "prettier . --check",
        "check": "npm run typecheck && npm run lint && npm run lint:css && npm run format:check",
        "fix": "npm run lint:fix && npm run lint:css:fix && npm run format",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "sync-types": "node scripts/sync-st-types.js",
        "sync-types:check": "node scripts/sync-st-types.js --check",
        "sync-types:clean": "node scripts/sync-st-types.js --clean",
        "version:sync": "node scripts/sync-version.js",
        "version:check": "node scripts/sync-version.js --check",
        "precommit": "npm run check && npm run test && npm run version:sync && npm run build && git add dist/ manifest.json src/shared/constants.ts",
        "prepare": "husky",
        "git:status": "node scripts/branch-utils.js status",
        "git:sync": "node scripts/branch-utils.js sync",
        "git:promote": "node scripts/branch-utils.js promote",
        "git:switch": "node scripts/branch-utils.js switch"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@fullhuman/postcss-purgecss": "^7.0.2",
        "@html-eslint/eslint-plugin": "^0.52.1",
        "@html-eslint/parser": "^0.52.0",
        "@vitest/coverage-v8": "^4.0.16",
        "autoprefixer": "^10.4.23",
        "css-loader": "^7.1.2",
        "cssnano": "^7.1.2",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "globals": "^16.0.0",
        "happy-dom": "^20.0.11",
        "html-loader": "^5.1.0",
        "husky": "^9.1.7",
        "jiti": "^2.6.1",
        "postcss": "^8.5.6",
        "postcss-custom-media": "^11.0.6",
        "postcss-import": "^16.1.1",
        "postcss-loader": "^8.2.0",
        "postcss-nested": "^7.0.2",
        "postcss-syntax": "^0.36.2",
        "prettier": "^3.7.4",
        "style-loader": "^4.0.0",
        "stylelint": "^16.26.1",
        "stylelint-config-standard": "^39.0.1",
        "ts-loader": "^9.5.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.51.0",
        "vitest": "^4.0.16",
        "webpack": "^5.104.1",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "crc": "^4.3.2",
        "png-chunk-text": "^1.0.0",
        "png-chunks-extract": "^1.0.0"
    }
}
